{
  "name": "radiance-ui",
  "version": "4.2.2",
  "description": "Curology's React based component library",
  "main": "dist/bundle.js",
  "module": "dist/bundle.es.js",
  "files": [
    "dist",
    "lib",
    "lib/constants",
    "lib/utils"
  ],
  "engines": {
    "node": ">=8.12.0"
  },
  "scripts": {
    "test": "jest",
    "storybook": "run-s build:svgs:index storybook:dev",
    "storybook:dev": "start-storybook --port 9001 --config-dir .storybook --static-dir ./public",
    "build-storybook": "build-storybook --config-dir .storybook --output-dir .out --static-dir ./public",
    "clean": "rimraf dist lib src/icons/",
    "build": "run-s clean && run-s build:icons build:icons:index && run-p build:rollup build:babel",
    "build:icons": "run-s build:icons:icons build:icons:emojis build:icons:glyphs",
    "build:icons:icons": "npx @svgr/cli --expand-props none --template src/utils/svgToIconTemplate/index.js -d src/icons/ src/svgs/icons/",
    "build:icons:emojis": "npx @svgr/cli --expand-props none --template src/utils/svgToIconTemplate/index.js -d src/icons/ src/svgs/emojis/",
    "build:icons:glyphs": "npx @svgr/cli --expand-props none --template src/utils/svgToIconTemplate/index.js -d src/icons/ src/svgs/glyphs/",
    "build:icons:index": "create-index src/icons/",
    "build:rollup": "rollup -c",
    "build:babel": "babel src -d lib",
    "build:svgs:index": "create-index src/svgs/ --recursive --update --extensions svg",
    "publish-package": "run-s build && yarn publish",
    "heroku-postbuild": "yarn run build:icons && yarn run build:icons:index && yarn run build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PocketDerm/radiance-ui.git"
  },
  "keywords": [
    "curology",
    "component-library",
    "react"
  ],
  "author": "Curology <engineering@curology.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PocketDerm/radiance-ui/issues"
  },
  "homepage": "https://github.com/PocketDerm/radiance-ui#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-transform-parameters": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@emotion/babel-preset-css-prop": "^10.0.17",
    "@storybook/addon-a11y": "^5.1.9",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-centered": "^5.1.9",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-storysource": "^5.1.9",
    "@storybook/addon-viewport": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@svgr/rollup": "^4.0.2",
    "@svgr/webpack": "^4.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-svg-import-to-string": "^0.0.1",
    "circular-dependency-plugin": "^5.0.2",
    "create-index": "PocketDerm/create-index#master",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-curology": "1.x.x",
    "eslint-config-prettier": "^3.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-curology": "^0.0.4",
    "eslint-plugin-emotion": "^10.0.14",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^4.0.0",
    "husky": "^1.1.2",
    "jest": "^24.3.1",
    "jest-emotion": "^10.0.17",
    "jest-junit": "^6.4.0",
    "lint-staged": "^7.3.0",
    "lodash.round": "^4.0.4",
    "prettier": "1.14.3",
    "react-dom": "^16.8.6",
    "react-storybook-addon-chapters": "^3.1.3",
    "react-test-renderer": "^16.8.6",
    "regenerator-runtime": "^0.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-size-snapshot": "^0.7.0",
    "storybook-readme": "^5.0.5",
    "tinycolor2": "^1.4.1",
    "webpack": "^4.23.0",
    "yarn-run-all": "^3.1.1"
  },
  "dependencies": {
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "prop-types": "^15.6.2",
    "react": "^16.8.6",
    "react-modal": "^3.8.1",
    "react-slick": "^0.23.2",
    "react-toggle-button": "^2.2.0",
    "react-transition-group": "^2.9.0",
    "tinycolor2": "^1.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run build:svgs:index && yarn run lint-staged",
      "pre-push": "yarn run test"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "subTaskConcurrency": 1,
    "linters": {
      "!(style|styles|test).js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "(style|styles|test).js": [
        "prettier --write",
        "git add"
      ],
      "*.{md,json}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
